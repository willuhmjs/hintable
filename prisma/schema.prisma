generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Difficulty {
  easy
  medium
  hard
  expert
}

model Game {
  id          Int      @id @default(autoincrement())
  word        String  @unique
  hintDb       String[]
  difficulty  Difficulty
  day         DateTime @unique
}